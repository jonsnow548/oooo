<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Bara de căutare -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Caută produse..."
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/search_bar_background"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <!-- Categorie: Haine -->
    <Button
        android:id="@+id/buttonHaine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Haine"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:padding="12dp" />

    <!-- Categorie: Încălțăminte -->
    <Button
        android:id="@+id/buttonIncaltaminte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Încălțăminte"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/buttonHaine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

    <!-- Categorie: Accesorii -->
    <Button
        android:id="@+id/buttonAccesorii"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Accesorii"
        android:backgroundTint="#FF6200EE"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/buttonIncaltaminte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:padding="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
